#!/bin/bash

# ijview: a script for displaying an image file in ImageJ
#         using the Bio-Formats Importer plugin

# Required JARs: loci_tools.jar, ij.jar

# JAR libraries must be in the same directory as this
# command line script for the command to function.

SCIFIO_DIR=`dirname "$0"`

source "$SCIFIO_DIR/config.sh"

if [ -z "$SCIFIO_DEVEL" ] && [ ! -e "$SCIFIO_DIR/ij.jar" ]
then
  echo "Required JAR libraries not found. Please download:"
  echo "  ij.jar"
  echo "from:"
  echo "  http://imagej.nih.gov/ij/upgrade/"
  echo "and place in the same directory as the command line tools."
else
  SCIFIO_PROG=loci.plugins.in.Importer SCIFIO_CP="$SCIFIO_DIR/ij.jar" "$SCIFIO_DIR/launch.sh" "$@"
fi
