#!/bin/bash

# omeul: a command-line client-side import tool for the OME Perl server

# Required JARs: loci_tools.jar, ome_tools.jar

# JAR libraries must be in the same directory as this
# command line script for the command to function.

SCIFIO_DIR=`dirname "$0"`
source "$SCIFIO_DIR/config.sh"

if [ -z "$SCIFIO_DEVEL" ] && \
  ([ ! -e "$SCIFIO_DIR/ome_tools.jar" ] && [ ! -e "$SCIFIO_DIR/ome-io.jar" ])
then
  echo "Required JAR libraries not found. Please download:"
  echo "  ome_tools.jar"
  echo "from:"
  echo "  http://www.loci.wisc.edu/bio-formats/downloads"
  echo ""
  echo "Please note that omeul is legacy software that "
  echo "has been discontinued. Use at your own risk."
else
  SCIFIO_PROG=loci.ome.io.OMEWriter SCIFIO_CP="$SCIFIO_DIR/ome_tools.jar" "$SCIFIO_DIR/launch.sh" "$@"
fi
